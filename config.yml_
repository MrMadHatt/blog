# Site settings
title: MrMadHatt's Blog
description: >-
  Welcome to my blog where I share my thoughts, projects, and learnings.
baseurl: "/blog" 
url: "https://MrMadHatt.github.io"

# Build settings
theme: minima
markdown: kramdown
permalink: /:year/:month/:day/:title/

# Plugins
plugins:
  - jekyll-feed
  - jekyll-seo-tag

# Exclude from processing
exclude:
  - Gemfile
  - Gemfile.lock
  - node_modules
  - vendor/bundle/
  - vendor/cache/
  - vendor/gems/
  - vendor/ruby/